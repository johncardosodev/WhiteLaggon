@model ExtraVM
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Atualizar Fração @Model.Extra.Nome</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                <div asp-validation-summary="All"></div> @*linha para colocar todos as validacoes*@
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.Extra.VillaId" asp-items="@Model.VillaLista" class="form-select border shadow">
                        <option disabled selected>- Selecione a Villa -</option>
                    </select>
                    <label asp-for="@Model.Extra.VillaId" class="ms-2"></label>
                    <span asp-validation-for="@Model.Extra.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Extra.Nome" class="form-control border shadow" />
                    <label asp-for="@Model.Extra.Nome" class="ms-2"></label>
                    <span asp-validation-for="@Model.Extra.Nome" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Extra.Descricao" class="form-control border shadow" />
                    <label asp-for="@Model.Extra.Descricao" class="ms-2"></label>
                    <span asp-validation-for="@Model.Extra.Descricao" class="text-danger"></span>
                </div>

            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Extra" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
@*Valida;oes no lado do cliente. Assim, nao ]e preciso fazer post*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}