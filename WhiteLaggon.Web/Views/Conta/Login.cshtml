@model LoginVM
<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-header bg-success bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Login pY9h@Hj$ZS</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form method="post">
                            <input asp-for="RedireccionarURL" hidden /> <!--Redireciona para a pagina que o utilizador estava antes de fazer login-->
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" aria-required="true" />
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" aria-required="true" />
                                <label asp-for="Password" class="form-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <input asp-for="LembrarMe" class="form-check-input" />

                                <label class="form-label">
                                    Relembrar password
                                </label>
                            </div>
                            <div>
                                <button type="submit" class="w-100 btn btn-lg btn-outline-success">Log in</button>
                            </div>
                            <div class="d-flex justify-content-between pt-2">
                                <p>
                                    <a asp-controller ="Conta" asp-action="EsqueceuPassword">Esqueceu da password?</a>
                                </p>
                                <p>
                                    <a asp-controller="Conta" asp-route-RedireccionarURL="@Model.RedireccionarURL" asp-action="Registar">Registar novo utilizador</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>

            </div>
        </div>
    </div>
</div>


@*Valida;oes no lado do cliente. Assim, nao ]e preciso fazer post*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}