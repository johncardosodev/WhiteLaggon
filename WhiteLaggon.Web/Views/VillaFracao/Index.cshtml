@model List<VillaFracao>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista de villas Cardoso Resort</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="VillaFracao" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Criar nova Fracao
                </a>
            </div>
        </div>

        <table class="table table-hover" align="center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Villa.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Villa_Fracao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Detalhes_Especiais)
                    </th>
                    <th>
                        Opções
                    </th>
                </tr>
            <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                                @Html.DisplayFor(modelItem => item.Villa.Nome)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.Villa_Fracao)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.Detalhes_Especiais)
                        </td>


                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="VillaFracao" asp-action="Atualizar" asp-route-villaFracaoId="@item.Villa_Fracao" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil"> Modificar</i>
                                </a>
                                <a asp-controller="VillaFracao" asp-action="Apagar" asp-route-villaFracaoId="@item.Villa_Fracao" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"> Apagar</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
