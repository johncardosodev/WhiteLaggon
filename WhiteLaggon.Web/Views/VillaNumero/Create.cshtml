@model VillaNumero

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Criar novo Villa numero</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                @*<div asp-validation-summary="All"></div> @*linha para colocar todos as validacoes*@
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaId" class="form-control border shadow" />
                    <label asp-for="VillaId" class="ms-2"></label>
                    <span asp-validation-for="VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Villa_Numero" class="form-control border shadow" />
                    <label asp-for="Villa_Numero" class="ms-2"></label>
                    <span asp-validation-for="Villa_Numero" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Detalhes_Especiais" class="form-control border shadow" />
                    <label asp-for="Detalhes_Especiais" class="ms-2"></label>
                    <span asp-validation-for="Detalhes_Especiais" class="text-danger"></span>
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="VillaNumero" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


@*Valida;oes no lado do cliente. Assim, nao ]e preciso fazer post*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}